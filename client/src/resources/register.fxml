<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="view.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="14" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" maxWidth="400">
            <children>
                <Label text="Register" style="-fx-font-size: 22px;" />
                <TextField fx:id="firstNameField" promptText="First Name" maxWidth="260" />
                <TextField fx:id="lastNameField" promptText="Last Name" maxWidth="260" />
                <TextField fx:id="emailField" promptText="Email" maxWidth="260" />
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="260" />
                <ComboBox fx:id="roleComboBox" promptText="Select Role" maxWidth="260" />
                <PasswordField fx:id="pinField" promptText="PIN (for Dentist/Secretary)" maxWidth="120" visible="false" managed="false" />
                <Button fx:id="registerButton" text="Register" minWidth="120" onAction="#handleRegister" />
                <Button fx:id="backToLoginButton" text="Back to Login" minWidth="120" onAction="#handleBackToLogin" styleClass="register-button" />
                <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 14px;" wrapText="true" minHeight="24" maxWidth="350" alignment="CENTER" visible="true" managed="true" />
            </children>
        </VBox>
    </children>
</AnchorPane> 