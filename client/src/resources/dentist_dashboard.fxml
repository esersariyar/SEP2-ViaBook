<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="900" prefHeight="600" fx:controller="view.DentistDashboardController">
    <children>
        <Label text="Dentist Dashboard" style="-fx-font-size: 24px;" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" />
        <Button text="Logout" fx:id="logoutButton" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" onAction="#handleLogout" />
        <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="70" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <content>
                <HBox spacing="32" alignment="TOP_CENTER" style="-fx-padding: 24;">
                    <VBox spacing="16" alignment="TOP_LEFT" minWidth="200" maxWidth="240" HBox.hgrow="NEVER">
                        <Label text="Profile" style="-fx-font-size: 16px;" />
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Name:" />
                            <Label text="[Name]" />
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Surname:" />
                            <Label text="[Surname]" />
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Email:" />
                            <Label text="[Email]" />
                        </HBox>
                    </VBox>
                    <VBox spacing="16" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" maxWidth="600">
                        <Label text="Working Hours" style="-fx-font-size: 16px;" />
                        <TableView prefHeight="120" VBox.vgrow="NEVER">
                            <columns>
                                <TableColumn text="Day" prefWidth="100" />
                                <TableColumn text="Start" prefWidth="100" />
                                <TableColumn text="End" prefWidth="100" />
                            </columns>
                        </TableView>
                        <Label text="Upcoming Appointments" style="-fx-font-size: 16px;" />
                        <TableView prefHeight="120" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Date" prefWidth="120" />
                                <TableColumn text="Time" prefWidth="120" />
                                <TableColumn text="Patient" prefWidth="120" />
                                <TableColumn text="Status" prefWidth="120" />
                            </columns>
                        </TableView>
                    </VBox>
                    <VBox spacing="16" alignment="TOP_CENTER" minWidth="180" maxWidth="220" HBox.hgrow="NEVER">
                        <Label text="Update Profile" style="-fx-font-size: 16px;" />
                        <Button text="Update" prefWidth="120" maxWidth="Infinity" />
                        <Label text="Block/Modify Slots" style="-fx-font-size: 16px;" />
                        <Button text="Block/Modify" prefWidth="120" maxWidth="Infinity" />
                    </VBox>
                </HBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane> 