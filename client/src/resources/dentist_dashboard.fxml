<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600">
    <children>
        <Label text="Dentist Dashboard" layoutX="320" layoutY="30" style="-fx-font-size: 24px;" />

        <Label text="Profile" layoutX="40" layoutY="80" style="-fx-font-size: 16px;" />
        <Label text="Name:" layoutX="40" layoutY="110" />
        <Label text="[Name]" layoutX="120" layoutY="110" />
        <Label text="Surname:" layoutX="40" layoutY="140" />
        <Label text="[Surname]" layoutX="120" layoutY="140" />
        <Label text="Email:" layoutX="40" layoutY="170" />
        <Label text="[Email]" layoutX="120" layoutY="170" />

        <Label text="Working Hours" layoutX="40" layoutY="220" style="-fx-font-size: 16px;" />
        <TableView layoutX="40" layoutY="250" prefWidth="300" prefHeight="120">
            <columns>
                <TableColumn text="Day" prefWidth="100" />
                <TableColumn text="Start" prefWidth="100" />
                <TableColumn text="End" prefWidth="100" />
            </columns>
        </TableView>

        <Label text="Update Profile" layoutX="400" layoutY="220" style="-fx-font-size: 16px;" />
        <Button text="Update" layoutX="400" layoutY="250" prefWidth="120" />

        <Label text="Upcoming Appointments" layoutX="40" layoutY="400" style="-fx-font-size: 16px;" />
        <TableView layoutX="40" layoutY="430" prefWidth="500" prefHeight="120">
            <columns>
                <TableColumn text="Date" prefWidth="120" />
                <TableColumn text="Time" prefWidth="120" />
                <TableColumn text="Patient" prefWidth="120" />
                <TableColumn text="Status" prefWidth="120" />
            </columns>
        </TableView>

        <Label text="Block/Modify Slots" layoutX="600" layoutY="400" style="-fx-font-size: 16px;" />
        <Button text="Block/Modify" layoutX="600" layoutY="430" prefWidth="120" />

        <Button text="Logout" layoutX="680" layoutY="40" fx:id="logoutButton" />
    </children>
</AnchorPane> 