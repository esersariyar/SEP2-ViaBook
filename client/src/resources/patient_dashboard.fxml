<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600">
    <children>
        <Label text="Patient Dashboard" layoutX="320" layoutY="30" style="-fx-font-size: 24px;" />

        <!-- Profile Section -->
        <Label text="Profile" layoutX="40" layoutY="80" style="-fx-font-size: 16px;" />
        <Label text="Name:" layoutX="40" layoutY="110" />
        <Label text="[Name]" layoutX="100" layoutY="110" />
        <Label text="Email:" layoutX="40" layoutY="140" />
        <Label text="[Email]" layoutX="100" layoutY="140" />

        <!-- Upcoming Appointments Section -->
        <Label text="Upcoming Appointments" layoutX="40" layoutY="200" style="-fx-font-size: 16px;" />
        <TableView layoutX="40" layoutY="230" prefWidth="500" prefHeight="200">
            <columns>
                <TableColumn text="Date" prefWidth="120" />
                <TableColumn text="Time" prefWidth="120" />
                <TableColumn text="Dentist" prefWidth="120" />
                <TableColumn text="Status" prefWidth="120" />
            </columns>
        </TableView>

        <!-- Book Appointment Section -->
        <Label text="Book Appointment" layoutX="600" layoutY="200" style="-fx-font-size: 16px;" />
        <Button text="Book" layoutX="600" layoutY="230" prefWidth="120" />

        <!-- Logout Button -->
        <Button text="Logout" layoutX="680" layoutY="40" fx:id="logoutButton" />
    </children>
</AnchorPane> 