<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="900" prefHeight="600" fx:controller="view.SecretaryDashboardController">
    <children>
        <Label text="Secretary Dashboard" style="-fx-font-size: 24px;" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" />
        <Button text="Logout" fx:id="logoutButton" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" onAction="#handleLogout" />
        <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="70" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <content>
                <HBox spacing="32" alignment="TOP_CENTER" style="-fx-padding: 24;">
                    <VBox spacing="16" alignment="TOP_LEFT" minWidth="220" maxWidth="260" HBox.hgrow="NEVER">
                        <Label text="Profile" style="-fx-font-size: 16px;" />
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Name:" />
                            <Label fx:id="nameLabel" text="[Name]" />
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Surname:" />
                            <Label fx:id="surnameLabel" text="[Surname]" />
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Email:" />
                            <Label fx:id="emailLabel" text="[Email]" />
                        </HBox>
                        <Label text="Pending Appointments" style="-fx-font-size: 16px;" />
                        <TableView fx:id="pendingAppointmentsTable" prefHeight="180" VBox.vgrow="NEVER">
                            <columns>
                                <TableColumn text="Date" prefWidth="80" />
                                <TableColumn text="Time" prefWidth="80" />
                                <TableColumn text="Patient" prefWidth="100" />
                                <TableColumn text="Dentist" prefWidth="100" />
                                <TableColumn text="Status" prefWidth="60" />
                            </columns>
                        </TableView>
                        <HBox spacing="8">
                            <Button text="Approve" fx:id="approveButton" prefWidth="100" onAction="#handleApproveAppointment" />
                            <Button text="Reject" fx:id="rejectButton" prefWidth="100" onAction="#handleRejectAppointment" />
                        </HBox>
                    </VBox>
                    <VBox spacing="16" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" maxWidth="600">
                        <Label text="All Appointments" style="-fx-font-size: 16px;" />
                        <HBox spacing="8">
                            <ComboBox fx:id="statusFilterComboBox" promptText="Filter by Status" prefWidth="150" onAction="#handleStatusFilter" />
                            <Button text="Refresh" fx:id="refreshButton" onAction="#handleRefresh" />
                            <Button text="Export Daily Schedule" fx:id="exportButton" onAction="#handleExport" prefWidth="180" maxWidth="Infinity" />
                        </HBox>
                        <TableView fx:id="allAppointmentsTable" prefHeight="200" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Date" prefWidth="120" />
                                <TableColumn text="Time" prefWidth="100" />
                                <TableColumn text="Patient" prefWidth="150" />
                                <TableColumn text="Dentist" prefWidth="150" />
                                <TableColumn text="Status" prefWidth="100" />
                            </columns>
                        </TableView>
                    </VBox>
                    <VBox spacing="16" alignment="TOP_CENTER" minWidth="180" maxWidth="220" HBox.hgrow="NEVER">
                        <Label text="Dentist Management" style="-fx-font-size: 16px;" />
                        <Button text="Create Dentist" fx:id="createDentistButton" prefWidth="150" maxWidth="Infinity" onAction="#handleCreateDentist" />
                        <VBox spacing="8" fx:id="dentistForm" visible="false" managed="false">
                            <Label text="Add New Dentist" style="-fx-font-weight: bold;" />
                            <TextField fx:id="firstNameField" promptText="First Name" />
                            <TextField fx:id="lastNameField" promptText="Last Name" />
                            <TextField fx:id="emailField" promptText="Email" />
                            <PasswordField fx:id="passwordField" promptText="Password" />
                            <HBox spacing="8">
                                <Button text="Save" fx:id="saveDentistButton" onAction="#handleSaveDentist" />
                                <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel" />
                            </HBox>
                        </VBox>
                        <Label text="Double-click a row to delete dentist" style="-fx-font-size: 12px; -fx-text-fill: gray;" />
                        <TableView fx:id="dentistsTable" prefHeight="120" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Name" prefWidth="120" />
                                <TableColumn text="Surname" prefWidth="120" />
                                <TableColumn text="Email" prefWidth="200" />
                            </columns>
                        </TableView>
                    </VBox>
                </HBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane> 