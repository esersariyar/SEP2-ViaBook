<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="900" prefHeight="600" fx:controller="view.SecretaryDashboardController">
    <children>
        <Label text="Secretary Dashboard" style="-fx-font-size: 24px;" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" />
        <Button text="Logout" fx:id="logoutButton" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" />
        <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.topAnchor="70" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <content>
                <HBox spacing="32" alignment="TOP_CENTER" style="-fx-padding: 24;">
                    <VBox spacing="16" alignment="TOP_LEFT" minWidth="220" maxWidth="260" HBox.hgrow="NEVER">
                        <Label text="Appointment Requests" style="-fx-font-size: 16px;" />
                        <TableView prefHeight="180" VBox.vgrow="NEVER">
                            <columns>
                                <TableColumn text="Date" prefWidth="100" />
                                <TableColumn text="Time" prefWidth="100" />
                                <TableColumn text="Patient" prefWidth="120" />
                                <TableColumn text="Dentist" prefWidth="120" />
                                <TableColumn text="Status" prefWidth="60" />
                            </columns>
                        </TableView>
                        <HBox spacing="8">
                            <Button text="Approve" prefWidth="100" />
                            <Button text="Reject" prefWidth="100" />
                        </HBox>
                    </VBox>
                    <VBox spacing="16" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" maxWidth="600">
                        <Label text="Dentists" style="-fx-font-size: 16px;" />
                        <Button text="Create" prefWidth="100" maxWidth="Infinity" />
                        <TableView prefHeight="120" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Name" prefWidth="120" />
                                <TableColumn text="Surname" prefWidth="120" />
                                <TableColumn text="Email" prefWidth="200" />
                                <TableColumn text="Delete" prefWidth="100" />
                            </columns>
                        </TableView>
                    </VBox>
                    <VBox spacing="16" alignment="TOP_CENTER" minWidth="180" maxWidth="220" HBox.hgrow="NEVER">
                        <Label text="Export Daily Schedule" style="-fx-font-size: 16px;" />
                        <Button text="Export" prefWidth="100" maxWidth="Infinity" />
                    </VBox>
                </HBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane> 